<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_publicidad_customizations" model="ir.ui.view">
        <field name="name">sale.order.form.publicidad_customizations</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='name']" position="before">
                <field name="design_image" widget="image"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="after">
                <field name="width" attrs="{'readonly': [('product_uom_name', '!=', 'm²')]}"/>
                <field name="product_uom_name" invisible="1"/>
                <field name="height" attrs="{'readonly': [('product_uom_name', '!=', 'm²')]}"/>
                <field name="total_in_m2"/>
            </xpath>
        </field>
    </record>
</odoo>
